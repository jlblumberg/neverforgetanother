<div class="w-full">
  <h1 class="font-bold text-4xl mb-4">Never Forget Another</h1>
  
  <% if logged_in? %>
    <div class="space-y-4">
      <p class="text-lg">Welcome, <%= current_user.email %>!</p>
      <p class="text-gray-600">You're successfully logged in.</p>
    </div>
  <% else %>
    <div class="space-y-4">
      <p class="text-lg mb-6">Schedule SMS and email reminders so you don't forget to do things.</p>
      <%= form_with url: "/auth/google", method: :post, local: true, data: { turbo: false }, class: "inline-block" do |f| %>
        <%= f.submit "Sign in with Google", class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition border-0 cursor-pointer" %>
      <% end %>
    </div>
  <% end %>
</div>
