<div class="w-full max-w-3xl mx-auto">
  <div class="mb-6">
    <%= link_to reminders_path, class: "text-sm text-gray-500 hover:text-gray-900" do %>
      ‚Üê All reminders
    <% end %>
  </div>

  <div class="flex items-center justify-between mb-6 pb-6 border-b border-gray-100">
    <h1 class="text-2xl font-semibold text-gray-900 tracking-tight"><%= @reminder.title %></h1>
    <% unless @reminder.completed? %>
      <div class="flex items-center gap-3">
        <% if @reminder.cancelled.present? %>
          <%= button_to "Reactivate", uncancel_reminder_path(@reminder), method: :post, 
              class: "text-sm text-gray-500 hover:text-gray-900 bg-transparent border-0 p-0 cursor-pointer font-normal", form: { class: "inline m-0 p-0" } %>
        <% else %>
          <%= link_to "Edit", edit_reminder_path(@reminder), class: "text-sm text-gray-500 hover:text-gray-900" %>
          <%= button_to "Cancel", cancel_reminder_path(@reminder), method: :post, 
              data: { confirm: "Are you sure you want to cancel this reminder?" }, 
              class: "text-sm text-gray-500 hover:text-gray-900 bg-transparent border-0 p-0 cursor-pointer font-normal", form: { class: "inline m-0 p-0" } %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="space-y-10">
    <div>
      <h2 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-3">Description</h2>
      <p class="text-base text-gray-900 leading-relaxed"><%= @reminder.description %></p>
    </div>

    <div class="pt-2">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
        <div>
          <h2 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Start</h2>
          <p class="text-gray-900">
            <%= @reminder.started.in_time_zone(current_user.timezone).strftime("%B %d, %Y at %I:%M %p") %>
          </p>
          <p class="text-gray-500 text-sm mt-1"><%= current_user.timezone %></p>
        </div>

        <div>
          <h2 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Recurrence</h2>
          <p class="text-gray-900"><%= @reminder.period.humanize %></p>
        </div>

        <div>
          <h2 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Delivery</h2>
          <p class="text-gray-900"><%= @reminder.delivery_methods_humanized %></p>
        </div>

        <div>
          <h2 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Status</h2>
          <% if @reminder.cancelled.present? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium text-gray-600 bg-gray-100">
              Cancelled
            </span>
            <p class="text-gray-500 text-sm mt-2">
              <%= @reminder.cancelled.in_time_zone(current_user.timezone).strftime("%B %d, %Y") %>
            </p>
          <% elsif @reminder.completed? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium text-gray-600 bg-gray-100">
              Completed
            </span>
            <p class="text-gray-500 text-sm mt-2">
              <%= @reminder.started.in_time_zone(current_user.timezone).strftime("%B %d, %Y at %I:%M %p") %>
            </p>
          <% else %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium text-gray-600 bg-gray-100">
              Active
            </span>
            <% if @reminder.next_send_time %>
              <div class="mt-3 pt-3 border-t border-gray-100">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">Next send</p>
                <p class="text-base font-medium text-gray-900">
                  <%= @reminder.next_send_time.in_time_zone(current_user.timezone).strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
