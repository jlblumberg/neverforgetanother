<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to reminders_path, class: "text-sm text-gray-500 hover:text-gray-900" do %>
      ‚Üê All reminders
    <% end %>
  </div>
  <h1 class="text-2xl font-semibold text-gray-900 tracking-tight mb-8">Settings</h1>

  <div class="space-y-8">
    <div>
      <h2 class="text-sm font-medium text-gray-900 mb-1">Timezone</h2>
      <p class="text-sm text-gray-500 mb-6">
        Current: <span class="text-gray-900"><%= current_user.timezone || "UTC (detecting...)" %></span>
      </p>

    <%= form_with url: update_timezone_path, method: :patch, local: true, class: "space-y-4", data: { controller: "form", action: "submit->form#submit" } do |f| %>
      <div>
        <%= f.label :timezone, "Select a new timezone:", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :timezone,
            options_for_select(
              ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] }.sort,
              current_user.timezone
            ),
            { prompt: "Choose a timezone..." },
            { class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white" } %>
      </div>

      <div>
        <%= f.submit "Update", data: { form_target: "submit" }, class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 rounded-md transition cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed" %>
      </div>
    <% end %>

    <div class="pt-8">
      <h3 class="text-sm font-medium text-gray-900 mb-2">Automatic Detection</h3>
      <p class="text-sm text-gray-500 mb-4">
        Detect your timezone based on your browser settings.
      </p>
      <button onclick="window.detectAndUpdateTimezone('<%= update_timezone_path %>', { showAlerts: true })" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition">Re-detect</button>
    </div>
  </div>
</div>

