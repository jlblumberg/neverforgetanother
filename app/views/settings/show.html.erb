<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to reminders_path, class: "text-sm text-gray-500 hover:text-gray-900" do %>
      ‚Üê All reminders
    <% end %>
  </div>
  <h1 class="text-2xl font-semibold text-gray-900 tracking-tight mb-8">Settings</h1>

  <div class="space-y-8">
    <div>
      <h2 class="text-sm font-medium text-gray-900 mb-1">Timezone</h2>
      <p class="text-sm text-gray-500 mb-6">
        Current: <span class="text-gray-900"><%= current_user.timezone || "UTC (detecting...)" %></span>
      </p>

    <%= form_with url: update_timezone_path, method: :patch, local: true, class: "space-y-4", data: { controller: "form", action: "submit->form#submit" } do |f| %>
      <div>
        <%= f.label :timezone, "Select a new timezone:", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :timezone,
            options_for_select(
              ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] }.sort,
              current_user.timezone
            ),
            { prompt: "Choose a timezone..." },
            { class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white" } %>
      </div>

      <div>
        <%= f.submit "Update", data: { form_target: "submit" }, class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 rounded-md transition cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed" %>
      </div>
    <% end %>

    <div class="pt-8">
      <h3 class="text-sm font-medium text-gray-900 mb-2">Automatic Detection</h3>
      <p class="text-sm text-gray-500 mb-4">
        Detect your timezone based on your browser settings.
      </p>
      <button onclick="window.detectAndUpdateTimezone('<%= update_timezone_path %>', { showAlerts: true })" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition">Re-detect</button>
    </div>

    <div class="pt-8">
      <h2 class="text-sm font-medium text-gray-900 mb-1">Phone number</h2>
      <p class="text-sm text-gray-500 mb-4">
        Required for text reminders. For the time being we support US phone numbers only.
      </p>
      <% if current_user.errors[:phone].any? %>
        <div class="mb-4 p-3 rounded-lg bg-red-50 border border-red-200 text-red-800 text-sm" role="alert">
          <%= current_user.errors[:phone].to_sentence %>
        </div>
      <% end %>
      <%= form_with url: update_phone_path, method: :patch, local: true, class: "space-y-4", data: { controller: "phone-format" } do |f| %>
        <%= f.hidden_field :phone_country_code, value: "US" %>
        <div class="grid grid-cols-1 sm:grid-cols-[auto_1fr] gap-4">
          <div>
            <%= f.label :phone_country_code, "Country", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
            <%= f.select :phone_country_code,
                options_for_select(phone_country_code_options, @phone_country_code),
                {},
                {
                  disabled: true,
                  class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg bg-gray-50 text-gray-600 cursor-not-allowed #{'border-red-300' if current_user.errors[:phone].any?}",
                } %>
          </div>
          <div>
            <%= f.label :phone_number, "Phone number", class: "block text-sm font-medium text-gray-700 mb-1.5" %>
            <%= f.telephone_field :phone_number,
                value: @phone_number,
                placeholder: "(415) 555-1234",
                required: true,
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white #{'border-red-300 focus:ring-red-500 focus:border-red-500' if current_user.errors[:phone].any?}",
                autocomplete: "tel-national",
                data: { phone_format_target: "input", action: "input->phone-format#format" } %>
          </div>
        </div>
        <%= f.submit "Update phone", class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 rounded-md transition cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>

