<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Settings</h1>

  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Timezone</h2>
    <p class="text-gray-600 mb-4">
      Your current timezone: <strong><%= current_user.timezone || "UTC (detecting...)" %></strong>
    </p>

    <%= form_with url: update_timezone_path, method: :patch, local: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :timezone, "Select a new timezone:", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :timezone,
            options_for_select(
              ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] }.sort,
              current_user.timezone
            ),
            { prompt: "Choose a timezone..." },
            { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <div class="flex gap-4">
        <%= f.submit "Update Timezone", class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition cursor-pointer" %>
        <%= link_to "Cancel", root_path, class: "bg-gray-200 text-gray-800 px-6 py-2 rounded-lg hover:bg-gray-300 transition" %>
      </div>
    <% end %>

    <div class="mt-6 pt-6 border-t border-gray-200">
      <h3 class="text-lg font-semibold mb-2">Automatic Detection</h3>
      <p class="text-gray-600 mb-4">
        Let us automatically detect your timezone based on your browser settings.
      </p>
      <button onclick="window.detectAndUpdateTimezone('<%= update_timezone_path %>', { showAlerts: true })" class="inline-block bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition cursor-pointer font-medium border-0" style="text-decoration: none !important; color: white !important; background-color: #16a34a !important;">Re-detect Timezone</button>
    </div>
  </div>
</div>

